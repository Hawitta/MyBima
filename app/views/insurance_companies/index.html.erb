<p style="color: green"><%= notice %></p>

<% content_for :title, "Insurance companies" %>

<h1>Insurance companies</h1>
<br/>
<div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Company Name</th>
      <th>Logo </th>
      <th>Website</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @insurance_companies.each do |insurance_company| %>
      <tr>
        <td><%= insurance_company.company_name %></td>
        <td><img src="<%= insurance_company.logo %>" alt="Logo" width="70" height="50">
        </td>
        <td><%= insurance_company.website %></td>
        <td><%= insurance_company.email %></td>
        <td>

          <%= link_to "Show this company", insurance_company %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<%= link_to "New insurance company", new_insurance_company_path, class:'btn btn-secondary' %>
