<% if notice %>
  <%= render 'layouts/alerts' %>
<%end%>



<%= form_with(model: @coverdetail, url: coverdetails_path, method: :post) do |form| %>

  <% if @coverdetail.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(coverdetail.errors.count, "error") %> prohibited this coverdetail from being saved:</h2>

      <ul>
        <% coverdetail.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :cover_id, style: "display: block" %>
  <%= form.collection_select :cover_id, 
    @covers, :id, :cover_name,
    { prompt: "Choose a cover" } ,  class:"form-control" %>  
     </div>

  <div class="form-group">
    <%= form.label :category, style: "display: block" %>
     <%= form.collection_select :category, 
  [['Family', 'Family'],['Individual', 'Individual']],
  :last, :first,
  { prompt: "Choose category" }, class:"form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :optional, style: "display: block" %>
    <%= form.text_field :optional,  class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :younger_age, style: "display: block" %>
    <%= form.number_field :younger_age,  class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :older_age, style: "display: block" %>
    <%= form.number_field :older_age,  class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>
